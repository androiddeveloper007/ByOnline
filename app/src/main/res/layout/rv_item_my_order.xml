<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/orderNumTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="订单号"
            android:textColor="#a4a4a4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderNum"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/orderNumTitle"
            android:gravity="center_vertical"
            android:textColor="#253231"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textColor="#00c22e"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_below="@+id/orderStatus"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#e3e3e3" />

        <TextView
            android:id="@+id/orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderStatus"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            android:drawableLeft="@drawable/picture_word_commend"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="图文资讯"
            android:textColor="#253231"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/orderFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/orderStatus"
            android:layout_marginRight="20dp"
            android:layout_marginTop="11dp"
            android:text="￥0"
            android:textColor="#f22727"
            android:textSize="18sp" />

        <com.bowen.commonlib.widget.CircleImageView
            android:id="@+id/doctorImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/orderType"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/man" />

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderType"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/doctorImg"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:ellipsize="end"
            android:textColor="#253231"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/doctorLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderType"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/orderDepartment"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:ellipsize="end"
            android:textColor="#a4a4a4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderType"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/doctorName"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:ellipsize="end"
            android:textColor="#a4a4a4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hospitalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctorName"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/doctorImg"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#a4a4a4"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/doctorImg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#e3e3e3" />

        <TextView
            android:id="@+id/orderHasPayTitle"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_below="@+id/doctorImg"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:textColor="#a4a4a4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderHasPay"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_below="@+id/doctorImg"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/orderHasPayTitle"
            android:gravity="center_vertical"
            android:textColor="#253231"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/orderNextStepBtn"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/doctorImg"
            android:layout_marginRight="20dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/button_comment_direct"
            android:gravity="center"
            android:text="立即咨询"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/orderBtn0"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/doctorImg"
            android:layout_marginRight="20dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/button_go_pay"
            android:gravity="center"
            android:text="去支付"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderBtn1"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:layout_below="@+id/doctorImg"
            android:layout_marginRight="5dp"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@+id/orderBtn0"
            android:background="@drawable/button_cancel_order"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#b8b8b8"
            android:textSize="14sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>