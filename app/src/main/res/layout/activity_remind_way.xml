<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical">

    <com.bowen.commonlib.widget.ActionTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleViewVisible="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <View style="@style/line_diliver"></View>

        <RelativeLayout
            android:id="@+id/mAlarmRingLayout"
            style="@style/layout_click"
            android:layout_width="match_parent"
            android:layout_height="54.3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:gravity="center_vertical"
                android:text="铃声"
                android:textColor="#a4a4a4"
                android:textSize="16.9sp" />

            <TextView
                android:id="@+id/mAlarmRingTv"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13.3dp"
                android:layout_marginRight="17dp"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_main_black"
                android:textSize="16.9sp" />
        </RelativeLayout>


        <RelativeLayout
            style="@style/layout_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="54.3dp">

            <View
                style="@style/line_diliver"
                android:layout_marginLeft="13.3dp"
                android:layout_marginRight="13.3dp"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:gravity="center_vertical"
                android:text="震动"
                android:textColor="#a4a4a4"
                android:textSize="16.9sp" />

            <com.bowen.commonlib.widget.SwitchButton
                android:id="@+id/mAlarmShakeSwitchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true"
                app:kswTextOff="    "
                app:kswTextOn="    "
                app:kswTintColor="@color/color_main" />
        </RelativeLayout>
    </LinearLayout>
    <View style="@style/line_diliver"></View>
</LinearLayout>



