<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="304dp"
    android:layout_height="169dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_4">

        <com.bowen.commonlib.widget.CircleImageView
            android:id="@+id/mBannerImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:image_radius="4dp"
            app:image_type="round"/>

        <TextView
            android:id="@+id/mBannerTitileTv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/color_black_p20"
            android:gravity="center"
            android:lines="1"
            android:text="身体计算机课副书记的开发商将快递费几十块的房间框"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>