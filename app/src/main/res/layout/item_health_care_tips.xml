<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mSmallTipsLayout"
    android:layout_width="match_parent"
    android:layout_height="123dp"
    android:background="@color/color_main_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/mTipsBgImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bg"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/item_tips_bg"
            android:background="@color/color_black_p20"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mTipsContentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:gravity="center"
                android:maxLines="2"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/color_white"/>
            <TextView
                android:id="@+id/mTipsAuthorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="45dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:lines="1"
                android:text=""
                android:textSize="11sp"
                android:textColor="@color/color_white"/>
        </LinearLayout>



        <View
            style="@style/line_diliver"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>


</RelativeLayout>