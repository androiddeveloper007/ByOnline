<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/mClinicNameTv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="正安中医馆"
            android:textColor="@color/color_main_black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/mDialImg"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/clinic_call_click_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mClinicAddressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:text="广东省深圳市"
        android:textColor="@color/color_main_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/mClinicDistanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/location_red_icon"
        android:drawablePadding="5dp"
        android:text="距您800米"
        android:textColor="@color/color_main_black"
        android:textSize="12sp" />
    <View
        style="@style/line_diliver"
        android:layout_marginTop="10dp"
        ></View>
</LinearLayout>