<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="96dp"
android:layout_height="96dp"
android:background="@color/color_00"
android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp">

    <com.bowen.commonlib.widget.CircleImageView
        android:id="@+id/mPhotoImg"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:scaleType="centerCrop"
        app:image_radius="4dp"
        app:image_type="round" />

    <ImageView
        android:id="@+id/addImg"
        android:layout_width="27.33dp"
        android:layout_height="27.33dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/add"/>
</RelativeLayout>

<ImageView
    android:id="@+id/mDeleteImg"
    android:layout_width="14.7dp"
    android:layout_height="14.7dp"
    android:layout_alignParentRight="true"
    android:background="@drawable/delete" />
</RelativeLayout>

