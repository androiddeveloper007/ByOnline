<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:paddingBottom="16dp"
    >

    <com.bowen.commonlib.widget.CircleImageView
        android:id="@+id/mHeadPortraitImg"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="10dp"
        app:image_radius="100dp"
        app:image_type="round"
        android:src="@drawable/man" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_toRightOf="@id/mHeadPortraitImg">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/mNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.7dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/white_arrow"
                android:text="李时珍"
                android:textColor="@color/color_white"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/mChangerUserBtn"
                android:layout_width="57dp"
                android:layout_height="18dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:text="切换成员"
                android:textSize="11sp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:background="@drawable/button_main_01"
                android:layout_toRightOf="@id/mNameTv"/>

            <TextView
                android:id="@+id/mHealthTipsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mNameTv"
                android:layout_marginLeft="19.7dp"
                android:layout_marginTop="4.7dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="千保健，万保健，心态平衡是关键"
                android:textColor="#99ffffff"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>