<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@color/color_00"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <TextView
                android:id="@+id/mChooseTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:textColor="@color/color_main_black"
                android:text=""/>

            <TextView
                android:id="@+id/mCancleTv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/color_main"
                android:text="取消"/>
        </RelativeLayout>
        <View style="@style/line_diliver"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="坐诊医馆："
                android:textSize="15sp"
                android:textColor="@color/color_main_gray"></TextView>
            <TextView
                android:id="@+id/mClinicNameTv"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/color_main_black"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医馆地址："
                android:textSize="15sp"
                android:textColor="@color/color_main_gray"></TextView>
            <TextView
                android:id="@+id/mClinicAddressTv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/color_main_black"></TextView>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="7dp"/>

    </LinearLayout>
</LinearLayout>