<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_00"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="283.3dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/corner_affirm_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTitleTv"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:gravity="center"
                android:text="新增药品"
                android:textColor="@color/color_main_black"
                android:textSize="19.1sp" />

            <View
                style="@style/line_diliver"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="67dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:text="药品名称"
                        android:textColor="#a4a4a4"
                        android:textSize="16.9sp" />

                    <EditText
                        android:id="@+id/mMedicineNameEdit"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="17dp"
                        android:maxLines="2"
                        android:maxLength="40"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="如阿莫西林胶囊等"
                        android:textColor="@color/color_main_black"
                        android:textColorHint="@color/color_main_gray"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54.3dp">

                    <View
                        style="@style/line_diliver"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="25dp"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:text="用量"
                        android:textColor="#a4a4a4"
                        android:textSize="16.9sp" />

                    <EditText
                        android:id="@+id/mVolmeEdit"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="17dp"
                        android:background="@null"
                        android:maxLines="2"
                        android:maxLength="20"
                        android:gravity="right"
                        android:hint="如25毫升、2粒等"
                        android:textColor="@color/color_main_black"
                        android:textColorHint="@color/color_main_gray"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53.3dp"
            android:layout_alignParentBottom="true">

            <View
                style="@style/line_diliver"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mCancleTv"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/color_main_black"
                    android:textSize="19.1sp" />

                <View style="@style/line_diliver_h" />

                <TextView
                    android:id="@+id/mOkTv"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/color_main"
                    android:textSize="19.1sp" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>