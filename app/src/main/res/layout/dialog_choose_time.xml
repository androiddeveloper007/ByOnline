<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="275.7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_13">

    <RelativeLayout
        android:background="@color/color_10"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/mCancleTv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/color_main"
            android:textSize="@dimen/font_2" />

        <TextView
            android:id="@+id/mOkTv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="确定"
            android:textColor="@color/color_main"
            android:textSize="@dimen/font_2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.bowen.commonlib.widget.wheel.WheelView
            android:id="@+id/hourWheelView"
            android:layout_width="0px"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:text=":"/>
        <com.bowen.commonlib.widget.wheel.WheelView
            android:id="@+id/minuteWheelView"
            android:layout_width="0px"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:gravity="right" />
    </LinearLayout>
</LinearLayout>