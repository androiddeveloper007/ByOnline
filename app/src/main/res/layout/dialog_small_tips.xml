<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_p20"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/mShareSmallTipsLayout"
            android:layout_width="316dp"
            android:layout_height="438dp"
            android:drawingCacheQuality="high"
            android:alwaysDrawnWithCache="true"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corner_affirm_bg"
            android:orientation="vertical">

            <com.bowen.commonlib.widget.CircleImageView
                android:id="@+id/mTipsBgImg"
                android:layout_width="match_parent"
                android:layout_height="337dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_bg"
                app:image_radius="4dp"
                app:image_type="round" />

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="57dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/samll_tips_date_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mTipsMonthTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.5dp"
                    android:gravity="center_horizontal"
                    android:text="五月"
                    android:textColor="@color/color_white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/mTipsDayTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="13"
                    android:textColor="@color/color_white"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTipsWeekTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="星期五"
                    android:textColor="@color/color_main_black"
                    android:textSize="10sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="337dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_black_p20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTipsContentTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:maxLines="2"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="只要瘦下来，其他一切都好说，"
                            android:textColor="@color/color_white"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/mTipsAuthorTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:lines="1"
                            android:paddingRight="24dp"
                            android:text="苏本行（作）"
                            android:textColor="@color/color_white"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_white"></ImageView>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="94dp"
                    android:layout_height="34dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/samll_tips_slogan" />

                <LinearLayout
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mTipsQRcodeImg"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/img_bg" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textSize="11sp"
                        android:text="@string/app_name"
                        android:textColor="@color/color_main" />
                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/mCloseImg"
            android:layout_width="18.33dp"
            android:layout_height="18.33dp"
            android:layout_alignRight="@+id/mShareSmallTipsLayout"
            android:background="@drawable/icon_close" />

        <TextView
            android:id="@+id/mShareBtn"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:layout_below="@+id/mShareSmallTipsLayout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:background="@drawable/button_main"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/color_white"
            android:textSize="17sp" />
    </RelativeLayout>



</RelativeLayout>