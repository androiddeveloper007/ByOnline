<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="236dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="236dp"
                android:background="@drawable/login_head_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_black_p40">

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mPasswordLoginTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="密码登录"
                        android:textColor="@color/color_white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/mPasswordLoginCursorImg"
                        android:layout_width="17dp"
                        android:layout_height="9dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/login_cursor_up" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mAuthCodeLoginTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="验证码登录"
                        android:textColor="@color/color_white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/mAuthCodeLoginCursorImg"
                        android:layout_width="17dp"
                        android:layout_height="9dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/login_cursor_up"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/mLoginPhoneNumEdit"
            android:layout_width="292dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#253231"
            android:textColorHint="#b8b8b8"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/mAuthCodeLayout"
            android:layout_width="292dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone">

            <View
                style="@style/line_diliver"
                android:layout_width="292dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/mAuthCodeEdit"
                android:layout_width="292dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#253231"
                android:textColorHint="@color/color_main_gray"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/mGetAuthCodeBtn"
                android:layout_width="98dp"
                android:layout_height="31.7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13.3dp"
                android:background="@drawable/button_main_02"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_main"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mPasswordLayout"
            android:layout_width="292dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal">

            <View
                style="@style/line_diliver"
                android:layout_width="292dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/mLoginPasswordEdit"
                android:layout_width="292dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColor="#253231"
                android:textColorHint="#b8b8b8"
                android:textSize="17sp" />
        </RelativeLayout>

        <View
            style="@style/line_diliver"
            android:layout_width="292dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/mLoginBtn"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:background="@drawable/button_main"
            android:gravity="center"
            android:text="登 录"
            android:textColor="@color/color_white"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginTop="14dp">

            <TextView
                android:id="@+id/mImmediateRegistTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册"
                android:textColor="@color/color_main"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mForgetPasswordTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="忘记密码？"
                android:textColor="@color/color_main"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <View
                style="@style/line_diliver"
                android:layout_width="88dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="第三方账号登录"
                android:textColor="#b8b8b8"
                android:textSize="14sp" />

            <View
                style="@style/line_diliver"
                android:layout_width="88dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mLoginQQ"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/login_qq" />

                <ImageView
                    android:id="@+id/mLoginWechat"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/login_wechat" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
