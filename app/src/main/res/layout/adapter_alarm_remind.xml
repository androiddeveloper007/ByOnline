<?xml version="1.0" encoding="utf-8"?>
<com.bowen.tcm.common.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mSwipeMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_centerInParent="true"
    android:background="@color/color_main_bg"
    android:orientation="horizontal"
    app:content_id="@+id/contentLayout"
    app:right_id="@+id/rightMenu">

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main_bg"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="23dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp">

                <TextView
                    android:id="@+id/mTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:textStyle="bold"
                    android:text="8:30"
                    android:textColor="@color/color_main_black"
                    android:textSize="34sp" />

                <com.bowen.commonlib.widget.SwitchButton
                    android:id="@+id/mAlarmSwitchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    app:kswTextOff="    "
                    app:kswTextOn="    "
                    app:kswTintColor="@color/color_main" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp">

                <TextView
                    android:id="@+id/mRepeateRateTipsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="从3月12日起  每隔一天"
                    android:textColor="@color/color_main_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mRemindWayTipsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="铃声 + 震动"
                    android:textColor="@color/color_main_gray"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                style="@style/line_diliver"
                android:layout_marginLeft="13.3dp"
                android:layout_marginRight="13.3dp"
                android:layout_marginTop="17dp"></View>

            <TextView
                android:id="@+id/mRemindPersonTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                android:text="提醒自己"
                android:textColor="@color/color_main_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mRemindMedicineDesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:minLines="2"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="12dp"
                android:text="兰亭口服液2支，雪花膏2瓶,兰亭口服液2支"
                android:textColor="@color/color_main_black"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rightMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/mDeleteTv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/color_red"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</com.bowen.tcm.common.widget.SwipeMenuLayout>

