<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.bowen.tcm.common.widget.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sl_shadow_angle="90"
        app:sl_shadow_color="@color/color_black_p15"
        app:sl_shadow_distance="0dp"
        app:sl_shadow_radius="8dp">

        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/pop_bg">
            <TextView
                android:id="@+id/mEditTv"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/color_main_black"
                android:textSize="15sp" />
            <View
                style="@style/line_diliver"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"></View>
            <TextView
                android:id="@+id/mDeleteTv"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/color_main_black"
                android:textSize="15sp" />

        </LinearLayout>
    </com.bowen.tcm.common.widget.ShadowLayout>
</LinearLayout>