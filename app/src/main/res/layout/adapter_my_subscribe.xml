<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/mDocotorAvatarLayout"
                    android:layout_width="47dp"
                    android:layout_height="47dp">

                    <com.bowen.commonlib.widget.CircleImageView
                        android:id="@+id/mHeadPortraitImg"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/man"
                        app:image_radius="50dp"
                        app:image_type="round" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="13dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/corner_main_rectangle_red"
                        android:gravity="center"
                        android:text="名医"
                        android:textColor="@color/color_white"
                        android:textSize="10sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/mDocotorAvatarLayout"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mySubscribeDoctorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="姜医生"
                            android:textColor="@color/color_main_black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/mySubscribeDepartment"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="姜医生"
                            android:textColor="@color/color_main_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mySubscribeLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="姜医生"
                            android:textColor="@color/color_main_gray"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/mySubscribeHospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="姜医生"
                        android:textColor="@color/color_main_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/isRecommend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_recommend" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mySubscribeGoodAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="@color/color_main_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13dp">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="好评率"
                    android:textColor="@color/color_main_black"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp">

                    <ProgressBar
                        android:id="@+id/mySubscribeRateOfPraise"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="64dp"
                        android:layout_height="15dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/inquiry_progressbar_horizontal" />

                    <TextView
                        android:id="@+id/rateOfPraiseText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="100%"
                        android:textColor="@color/color_white"
                        android:textSize="12sp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="回复率"
                    android:textColor="@color/color_main_black"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp">

                    <ProgressBar
                        android:id="@+id/mySubscribeRateOfReply"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="64dp"
                        android:layout_height="15dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/inquiry_progressbar_horizontal" />

                    <TextView
                        android:id="@+id/rateOfReplyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="100%"
                        android:textColor="@color/color_white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line_diliver"
            android:layout_marginTop="15dp"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/mySubscribeCancel"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_cancel_order"
                    android:gravity="center"
                    android:text="取消关注"
                    android:textColor="#b8b8b8"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/mySubscribePresent"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_guide_enter"
                    android:gravity="center"
                    android:text="送心意"
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mySubscribeConsult"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_guide_enter"
                    android:gravity="center"
                    android:text="我要咨询"
                    android:textColor="@color/color_white"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>