<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mNewsItemLayout"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.bowen.commonlib.widget.CircleImageView
        android:id="@+id/mNewsImg"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:scaleType="centerCrop"
        app:image_radius="4dp"
        app:image_type="round"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp" />

    <TextView
        android:id="@+id/mNewsNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mNewsImg"
        android:layout_toRightOf="@+id/mNewsImg"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/color_main_black"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_alignBottom="@+id/mNewsImg"
        android:layout_toRightOf="@+id/mNewsImg">

        <TextView
            android:id="@+id/mNewsTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="0.9"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_main_tips"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mNewsCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="0.9"
            android:layout_marginRight="1dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#253231"
            android:textSize="14sp" />

    </RelativeLayout>



    <View
        style="@style/line_diliver"
        android:layout_alignParentBottom="true"></View>

</RelativeLayout>