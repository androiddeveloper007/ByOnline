<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mNewsItemLayout"
    android:layout_width="match_parent"
    android:layout_height="262dp"
    android:background="@color/color_white"
    >

    <com.bowen.commonlib.widget.CircleImageView
        android:id="@+id/mNewsImg"
        android:layout_width="326dp"
        android:layout_height="157dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:image_radius="4dp"
        app:image_type="round"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/mNewsNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mNewsImg"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/color_main_black"
        android:textSize="17sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">

        <TextView
            android:id="@+id/mNewsTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="ddd"
            android:textColor="@color/color_main_tips"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mNewsCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="ddd"
            android:textColor="@color/color_main_black"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        style="@style/line_diliver"
        android:layout_alignParentBottom="true" />

</RelativeLayout>