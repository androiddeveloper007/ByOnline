<?xml version="1.0" encoding="utf-8"?>
<com.bowen.tcm.common.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mSwipeMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="127dp"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    app:content_id="@+id/contentLayout"
    app:right_id="@+id/rightMenu">

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bowen.commonlib.widget.CircleImageView
                    android:id="@+id/doctorImg"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/man" />

                <TextView
                    android:id="@+id/doctorName"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/doctorImg"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="#253231"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/doctorLevel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/doctorName"
                    android:text=""
                    android:textColor="#a4a4a4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/consultTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="#a4a4a4"
                    android:textSize="14sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:minLines="2"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="2dp" />


        <View
            android:id="@+id/divider_my_consult"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_main_bg" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mDeleteTv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/color_red"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</com.bowen.tcm.common.widget.SwipeMenuLayout>