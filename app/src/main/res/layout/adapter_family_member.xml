<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white">


    <com.bowen.commonlib.widget.CircleImageView
        android:id="@+id/mHeadPortraitImg"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:src="@drawable/man"
        app:image_radius="50dp"
        app:image_type="round" />

    <RelativeLayout
        android:id="@+id/mUserInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/mHeadPortraitImg"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/mNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李时珍"
            android:textColor="@color/color_main_black"
            android:textSize="19.1sp" />
        <TextView
            android:id="@+id/mRelationShipTv"
            android:layout_width="39dp"
            android:layout_height="19dp"
            android:layout_toRightOf="@id/mNameTv"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="我"
            android:textSize="13sp"
            android:textColor="@color/color_main_black"
            android:background="@drawable/family_member_title"/>

        <TextView
            android:id="@+id/mRecentMedicalTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mNameTv"
            android:layout_marginTop="4.5dp"
            android:text="最近病历：2015-12-03"
            android:textColor="@color/color_main_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mLinkTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="已关联"
        android:textSize="17sp"
        android:textColor="@color/color_main_gray"/>

    <ImageView
        android:id="@+id/mLinkImg"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/family_link"/>

    <View style="@style/line_diliver"
        android:id="@+id/mBottomLime"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"></View>

</RelativeLayout>
